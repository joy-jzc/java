package com.atguigu.test;
/*
 * 求一个数组的最大值、最小值、平均数
 * 
 */
public class common {
	public static void main(String[] args) {
		int[] arr = new int[10];
		for(int i = 0;i < arr.length;i++) {
			arr[i] = (int)(Math.random()*(99-10+1)+10);
			System.out.print(" " + arr[i]);
		}
		System.out.println();
		int maxarr = 0;
		int min = 0;
		for(int i = 0;i < arr.length;i++) {
			maxarr = arr[i];
			min = arr [i];
			if(maxarr < arr[i])
				maxarr = arr[i];
			if(min > arr[i])
				min = arr[i];
		}
		System.out.println("最大数是：" + maxarr);
//		System.out.println("最小数是：" + min);
	}
}
